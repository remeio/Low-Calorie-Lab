<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_dish"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    app:cardCornerRadius="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dish"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dish_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="菜品名"
                    android:textColor="@color/colorBold"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_dish_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="价格"
                android:textColor="@color/colorPrimaryExtra" />

            <TextView
                android:id="@+id/tv_dish_calorie"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:text="卡路里"
                android:textColor="#999999" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dish_category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="类型"
                    android:textColor="#999999" />


                <ImageButton
                    android:id="@+id/ib_dish_add_dish"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cart" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorLine" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_dish_recommend"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="start|top"
        android:visibility="gone"
        app:srcCompat="@drawable/recommend" />

</android.support.v7.widget.CardView>
